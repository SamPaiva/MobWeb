@model MobWeb.Site.ViewModels.UsuarioLoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    
    @Html.AntiForgeryToken() 
    @Html.ValidationSummary(true)
    
    <div class="modal-dialog text-center">
        <div class="col-sm-8 main-section">
            <div class="modal-content">
                <div class="col-12">
                    <div class="modal-header">
                        <h3 class="text-center">Login</h3>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2"><i class="fa fa-user"></i></div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control", @placeholder = "Usuário" } })
                            @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2"><i class="fa fa-lock"></i></div>
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.Senha, new { @class = "form-control", @placeholder = "Senha" })
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="entrar" class="btn btn-primary" /> 
                    </div>
                </div>
            </div> <!--Fim da Modal-Content-->
        </div>
    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}